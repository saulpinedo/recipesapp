<% if user_signed_in? %>
    <p><font color="red">Welcome:<%= current_user.email %></font></p>
    <p><font color="white"><%=link_to 'Logged In [click to logout]',destroy_user_session_path,:method => :delete,style: 'color:#FFFFFF;' %></font></p>

<% else %>
    <p><font color="white">You are not signed in.  </font></p>
    <p><font color="white"><%= link_to 'Login' , new_user_session_path, style: 'color:#FFFFFF;' %></font></p>

<% end %>